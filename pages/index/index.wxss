/**index.wxss**/
.head{
  padding: 0 30rpx 10rpx;
  margin-top: -60rpx;
}
.head .t-img{
  margin-top: -150rpx;
}
.head .xxl{
  width: 200rpx;
  height: 200rpx;
  border: 1px solid #FFF;
  margin-bottom: 20rpx;
}
.head .name{
  font-weight: bold;
  font-size: 36rpx;
  color: #333;
}
.head .word,
.head .info{
  padding-top: 20rpx;
}
.head .word text{
  font-size: 32rpx;
	margin:0 auto;
	text-align:center;
	background:-webkit-linear-gradient(left,#ff0000,#ffff00 25%,#ff0000 50%,#ffff00 75%,#ff0000);
	color:transparent;
	-webkit-background-clip:text;
	background-size:200% 100%;
	animation:masked-animation 1s infinite linear;
}
@-webkit-keyframes masked-animation {
	0% {
	background-position:0 0;
}
100% {
	background-position:-100% 0;
}
}
.con{
  height: 60rpx;
  line-height: 60rpx;
}
.con .icon{
  margin-right: 20rpx;
}
.head .info{
  padding-bottom: 20rpx;
}